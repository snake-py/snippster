{
  "name": "snippster",
  "version": "0.1.5",
  "author": "Fabio Batti",
  "description": "Snippster helps to organize your code!",
  "private": true,
  "main": "public/electron.js",
  "repository": "git@github.com:snake-py/snippster.git",
  "homepage": "./",
  "scripts": {
    "test-react": "react-scripts test",
    "test": "mocha",
    "react-start": "react-scripts start",
    "rebuild": "electron-rebuild -f -w better-sqlit3",
    "postinstall": "electron-builder install-app-deps",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build -mwl",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "build": {
    "productName": "Snippster",
    "appId": "de.Snippster",
    "extends": null,
    "publish": {
      "provider": "spaces",
      "name": "snippster",
      "region": "fra1",
      "acl": "public-read"
    },
    "directories": {
      "buildResources": "C:/Users/vabis/Desktop/Playground/projects/snippster",
      "output": "C:/Users/vabis/Desktop/Playground/projects/snippster/dist",
      "app": "C:/Users/vabis/Desktop/Playground/projects/snippster"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/mac/icon.icns"
    },
    "linux": {
      "icon": "assets/png/icon.png"
    },
    "win": {
      "icon": "assets/win/icon.ico"
    },
    "files": [
      "!electron-builder.env",
      "!test/**/*",
      "!db/snippster.db",
      "!doc/**/*",
      "!src/**/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "ace-builds": "^1.4.13",
    "better-sqlite3": "^7.5.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^14.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.4",
    "electron-updater": "^4.6.1",
    "html-react-parser": "^1.4.5",
    "image-size": "^1.0.1",
    "node-sass": "*",
    "react": "^17.0.2",
    "react-ace": "^9.5.0",
    "react-dom": "^17.0.2",
    "react-panelgroup": "^1.0.12",
    "react-redux": "^7.2.6",
    "react-scripts": "5.0.0",
    "react-select": "^5.2.2",
    "react-svg": "^14.1.8",
    "react-textarea-autosize": "^8.3.3",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "wait-on": "^6.0.0",
    "web-vitals": "^2.1.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@babel/preset-react": "^7.16.7",
    "devtron": "^1.4.0",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "electron-rebuild": "^3.2.7",
    "electron-reloader": "^1.2.1",
    "mocha": "^9.1.4",
    "redux-mock-store": "^1.5.4",
    "spectron": "^15.0.0"
  }
}
